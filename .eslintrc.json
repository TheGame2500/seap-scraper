{
    "extends": ["plugin:meteor/recommended", "airbnb-base"],
    "plugins": [
        "import", "meteor", "chai-friendly"
    ],
    "settings" : {
        "import/resolver" : "meteor"
    },
    "rules": {
        "linebreak-style" : "off",
        "meteor/no-session" : "off",
        "meteor/eventmap-params": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "import/no-absolute-path" : "off",
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies" : "off",
        "import/extensions" : "off",
        "import/no-unresolved" : "error",
        "func-names": "off",
        "no-undef":"error",
        "object-shorthand":"warn",
        "prefer-arrow-callback": "off",
        "consistent-return": "off",
        "padded-blocks": "off",
        "semi": "off",
        "meteor/template-names": "off",
        "no-underscore-dangle": "off",
        "no-plusplus": "off",
        "eqeqeq": "warn",
        "quotes": "warn",
        "radix": "off",
        "no-unused-vars": "error",
        "no-param-reassign": "error",
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "arrow-parens": "off",
        "max-len": "off",
        "no-unused-expressions": "off",
        "chai-friendly/no-unused-expressions": "error",
        "no-console" : "warn",
        "no-eval" : "warn",
        "no-useless-escape" : "off",
        "no-continue" : "off",
        "meteor/audit-argument-checks" : "off",
        "no-extend-native" : "off",
        "global-require" : "off",
        "no-bitwise" : "off",
        "no-restricted-properties" : "off",
        "spaced-comment" : "off",
        "no-unreachable" : "warn",
        "no-trailing-spaces" : "warn"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "meteor": true,
        "mongo": true,
        "mocha": true
    },
    "globals" : {
        "log" : true,
        "moment" : false,
        "Intercom" : false,
        "BusinessModelOptions" : true,
        "AnalyticsPriorities" : true,
        "MinSignificanceThreshold" : true,
        "MaxSignificanceThreshold" : true,
        "Slack" : true,
        "sAlert" : false,
        "AuthToken" : true,
        "Shopify" : true,
        "RouteController" : false,
        "Chart" : false,
        "MaxReportsForUser" : true,
        "ActiveRoute" : false,
        "StripeCheckout" : false,
        "STRIPE_PUBLIC" : true,
        "PRO_SUBSCRIPTION" : true,
        "TRIAL_SUBSCRIPTION" : true,
        "AUDIT_SUBSCRIPTION" : true,
        "ReactiveTable" : false,
        "AutoForm" : false,
        "IntercomAppID" : true,
        "TimeSync" : false,
        "dataLayer" : false,
        "NonEmptyString" : true,
        "StandardSegments" : true,
        "CryptoJS" : true,
        "IntercomApiSecret" : true,
        "SyncedCron" : false,
        "FetchedMetrics" : true,
        "Future" : true,
        "IntercomApiKey" : true,
        "SchedulerTestMode" : true,
        "stripe" : true,
        "LAPSED_SUBSCRIPTION" : true,
        "ComparisonPeriods" : true,
        "refGroups" : true,
        "Mailgun" : true,
        "Handlebars" : false,
        "ConfidenceInterval" : true,
        "jStat" : true,
        "PI" : true,
        "FREE_SUBSCRIPTION" : true
    },
    "root" : true
}
